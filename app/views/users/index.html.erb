<h1>Users</h1>

<table class = "table table-bordered">
  <thead>
        <tr>
           <th>Id</th>
           <th>Img</th>
           <th>First Name</th>
           <th>Last Name</th>
           <th>Experience</th>
           <th>Skills</th>
        </tr>
     </thead>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.id %></td>
      <td><%= image_tag user.profile_pic.url(:thumb) %></td>
      <td><%= user.first_name %></td>
      <td><%= user.last_name %></td>
      <td><%= user.years_of_experience %></td>
      <td><%= user.skills %></td>
      <td><%= link_to 'Show', user %></td>
      <td><%= link_to 'Edit', edit_user_path(user) %></td>
      <td><%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>

<%= link_to "Create new user", new_user_path %>
<br>
<%= link_to "All Posts", user_posts_path(:user_id) %>
