<div class="profile">
    <div class="big-title"><%= @user.username.upcase %></div>
    <div class="media">
        <%= image_tag @user.profile_pic.url(:medium) %>
        <div class="media-body">
            <h3 class="media-heading profile-heading">
                Name:
                <%= @user.first_name %>
                <%= @user.last_name %>
                | Experience:
                <%= @user.years_of_experience %>
                | Skills:
                <%= @user.skills %><br>
            </h3>
        </div>
    </div>

    <%= link_to "Edit info", edit_user_path, class: "btn btn-default link" if current_user == @user %>
  </div>


</div>
<% if !@user.posts.empty? %>
<div class="post-section">
  <h2>Your Posts</h2>
    <% @user.posts.each do |post| %>
    <div class="media">
    <div class="md-title"><strong><%= post.title %></strong></div>
    <div class="md-title"><%= post.description %></div>
    <div>Language: <%= post.language %></div>
    <div class="btn-group-xs margin" role="group" aria-label="...">
      <%= link_to 'Show', user_post_path(current_user, post.id), class: "btn btn-default link" %>
    </div>
  </div>
    <% end %>
  <%= link_to "Go to posts", user_posts_path(current_user), class: "btn btn-default link" %>
</div>
<% end %>
