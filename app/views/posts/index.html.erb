<h1>All Posts</h1>

<% @posts.each do |post| %>
      <div>
        <div><%= post.title %></div>
        <div><%= post.description %></div>
        <div><%= post.language %></div>
        <div><%= link_to 'Show', user_post_path(current_user, post.id) %></div>
        <div><%= link_to 'Edit', edit_user_post_path(current_user, post.id) if current_user == post.user %></div>
        <div><%= link_to 'Delete', user_post_path(current_user, post.id), method: :delete, data: { confirm: 'Are you sure?' } if current_user == post.user %></div><br>
      </div>
    <% end %>

<%= link_to "Create new post", new_user_post_path %>
