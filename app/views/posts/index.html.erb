<h1>All Posts</h1>

<% @posts.each do |post| %>
      <div>
        <p>posted by <%= "#{post.user.first_name} #{post.user.last_name}" %></p>
        <div><strong><%= post.title %></strong></div>
        <div><%= post.description %></div>
        <div><%= post.language %></div>
        <div>
          <%= link_to 'View', user_post_path(current_user, post.id) %>
          <%#= link_to 'Edit', edit_user_post_path(current_user, post.id) if current_user == post.user %>
          <%#= link_to 'Delete', user_post_path(current_user, post.id), method: :delete, data: { confirm: 'Are you sure?' } if current_user == post.user %>
      </div><br>
      </div>
    <% end %>

<%= link_to "Create new post", new_user_post_path %>
