<%= form_for [@user, @post] do |p| %>

  <div class="field">
    <%= p.label :title %>
    <%= p.text_field :title %>
  </div>

  <div class="field">
    <%= p.label :description %>
    <%= p.text_area :description %>
  </div>

  <div class="field">
    <%= p.label :language %>
    <%= p.text_field :language %>
  </div>

  <div class="actions">
    <%= p.submit %>
  </div>
<% end %>
